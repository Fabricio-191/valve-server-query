{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [ "error", "tab", {
            "SwitchCase": 1
        }],
        "linebreak-style": [ "error", "windows" ],
        "quotes": [ "error", "single", { "avoidEscape": true } ],
        "semi": [ "error", "always" ],
        "no-async-promise-executor": [ "off" ],
        "no-mixed-spaces-and-tabs": [
            "error", "smart-tabs"
        ],
        "no-constant-condition": ["error", { 
            "checkLoops": false 
        }]
    }
}
